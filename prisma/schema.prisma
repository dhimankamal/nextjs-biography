// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Post {
  id      String @id @default(cuid())
  postid  String @unique
  date    String
  slug    String @unique
  title   String
  content Json
  excerpt Json
  categories Json 
  tags Json
  featured_media Int?
  imageUrl String?
  imagesUpdated Boolean @default(false)
}
model Categories {
   id String @id @default(cuid())
   categorieid Int @unique
   name String
   slug String
}

model Tags {
   id String @id @default(cuid())
   tagid Int @unique
   name String
   slug String
}

